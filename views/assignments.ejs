<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classes</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">

</head>

<body style="background-color:rgb(221, 249, 240);">
    <a class="btn-small waves-effect waves-light" href="/">
        <i class="material-icons left">arrow_back</i>Return to classes
    </a>
    <!-- Actual page content! -->
    <div class="container">
        <div class="section" id="stuffList">
            <h1><strong>Assignments</strong></h1>
            <table>
                <thead>

                    <tr>
                        <th>Class Name</th>
                        <th>Assignment Name</th>
                        <th>Due Date</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    <% for (let i = 0; i < inventory.length; i++) { %>
                    <tr>
                        <td><%=inventory[i].class%></td>
                        <td><%=inventory[i].assignment%></td>
                        <td><%=inventory[i].date%></td>
                        <td>
                            <a class="btn-small waves-effect waves-light" href=<%= "/assignment/details/" + inventory[i].id %> >
                                <i class="material-icons right">edit</i>
                                Edit assignment
                            </a>
                            <a class="btn-small waves-effect waves-light red" href="/assignments/assignment_details/<%= inventory[i].id %>/delete">
                                <i class="material-icons right">delete</i>
                                Delete assignment
                            </a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="stuffAdd">
            <h2><strong>Add assignments:</strong></h2>
            <form method="post" action="/assignments">
                <div class="row">
                    <div class="input-field col s6">
                        <label for="nameInput">Class Name:</label>
                        <input type="text" name="name" id="nameInput" class="validate" data-length="500" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="quantityInput">Assignment Name</label>
                        <input type="text" name="assignment" id="assignment" data-length="500" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="quantityInput">Due Date:</label>
                        <input type="text" name="date" id="date" data-length="500" required>
                    </div>
                </div>  
                <button class="btn waves-effect waves-light" type="submit">
                    <i class="material-icons right">playlist_add</i>
                    Add
                </button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>

</body>

</html>