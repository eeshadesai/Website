<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment Details</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">
</head>

<body>

    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="stuffDetail">
            <h1>Assignment details:</h1>
            <a class="btn-small waves-effect waves-light" href="/assignments">
                <i class="material-icons left">arrow_back</i>Return to Assignments
            </a>
            <table>
                <tr>
                    <th>Class:</th>
                    <td><%= class %></td>
                </tr>
                <tr>
                    <th>Assignment:</th>
                    <td><%= assignment %></td>

                </tr>
                <tr>
                    <th>Date:</th>
                    <td><%= date %></td>
                </tr>
                <tr>
                    <th>Description:</th>
                    <td><%= description %></td>
                </tr>
            </table>
        </div>

        <div class="section" id="stuffControls">
            <a class="btn-large waves-effect waves-light orange left modal-trigger" href="#assignmentsEdit">
                <i class="material-icons right">edit</i>
                Edit
            </a>
            <a class="btn-large waves-effect waves-light red right" href="/assignments/assignment_details/<%= id %>/delete" %>>
                <i class="material-icons right">delete</i>
                Delete
            </a>
        </div>


        <div class="modal" id="assignmentsEdit">

            <div class="modal-content">

                <h2>Edit item:</h2>
                <form method="post" action="/assignments/assignment_details/<%= id%>">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="nameInput">Class:</label>
                            <input type="text" name="name" id="nameInput" class="validate" data-length="32" value="<%= class%>" required>
                        </div>
                        <div class="input-field col s6">
                            <label for="quantityInput">Assignment:</label>
                            <input type="text" name="assignment" id="quantityInput" data-length="100" value="<%= assignment%>" required>
                        </div>
                        <div class="input-field col s6">
                            <label for="dateInput">Date:</label>
                            <input type="text" name="date" id="dateInput" data-length="100" value="<%= date%>"required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="descriptionInput">Description:</label>
                            <input type="text" name="description" id="descriptionInput" data-length="100" value="<%= description%>">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn waves-effect waves-light" type="submit">
                            <i class="material-icons right">send</i>
                            Submit
                        </button>
                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Never Mind</a>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>

</body>

</html>